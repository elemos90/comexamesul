# ====================================
# CONFIGURAÇÃO PRODUÇÃO - admissao.cycode.net
# ====================================
# 
# INSTRUÇÕES:
# 1. Copie este arquivo para .env no servidor
# 2. Altere as senhas marcadas com ⚠️
# 3. Configure credenciais de email
# 4. NUNCA commite o .env real no Git
#
# ====================================

# ====================================
# APLICAÇÃO
# ====================================

APP_NAME="Portal da Comissão de Exames de Admissão"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://admissao.cycode.net
APP_TIMEZONE=Africa/Maputo

# ====================================
# BANCO DE DADOS
# ====================================

DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=cycodene_comexames
DB_USERNAME=cycodene_dbuser
DB_PASSWORD=TROCAR_SENHA_FORTE_AQUI  # ⚠️ ALTERAR

# ====================================
# BANCO DE DADOS REMOTO (Backup/Migração)
# ====================================

REMOTE_INSTALL_HOST=localhost
REMOTE_INSTALL_DB=cycodene_comexames
REMOTE_INSTALL_USER=cycodene_dbuser
REMOTE_INSTALL_PASS=MESMA_SENHA_ACIMA

# ====================================
# CONFIGURAÇÃO DE EMAIL
# ====================================
# 
# Para Gmail, use App Password:
# https://myaccount.google.com/apppasswords
#

MAIL_FROM_NAME="Portal da Comissão de Exames"
MAIL_FROM_ADDRESS="noreply@admissao.cycode.net"
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=seu_email@gmail.com  # ⚠️ ALTERAR
MAIL_SMTP_PASS=sua_senha_app_gmail  # ⚠️ ALTERAR (16 caracteres sem espaços)
MAIL_SMTP_ENCRYPTION=tls

# Alternativa: Se usar email do domínio
# MAIL_SMTP_HOST=mail.cycode.net
# MAIL_SMTP_PORT=587
# MAIL_SMTP_USER=noreply@admissao.cycode.net
# MAIL_SMTP_PASS=senha_email_dominio

# ====================================
# SEGURANÇA - PRODUÇÃO
# ====================================

# Sessões
SESSION_NAME=exam_portal_prod
SESSION_LIFETIME=7200
SESSION_SECURE=true  # ⚠️ Requer HTTPS ativo!
SESSION_COOKIE_DOMAIN=.cycode.net

# Rate Limiting (proteção contra brute force)
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW=900

# CSRF
CSRF_TOKEN_KEY=csrf_token

# ====================================
# NOTAS IMPORTANTES
# ====================================
# 
# ✅ Sempre use HTTPS em produção
# ✅ SESSION_SECURE=true requer certificado SSL válido
# ✅ Gere senhas fortes: https://passwordsgenerator.net/
# ✅ Faça backup do .env em local seguro
# ✅ Nunca exponha credenciais em repositórios públicos
# 
# ====================================
